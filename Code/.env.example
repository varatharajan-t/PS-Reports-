# PS Reports - Environment Configuration Example
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env file to version control!

# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================

# Generate a new secret key for production using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Set to False in production!
DEBUG=True

# Comma-separated list of allowed hostnames
# Example: your-domain.com,www.your-domain.com,192.168.1.100
ALLOWED_HOSTS=localhost,127.0.0.1,172.16.108.22

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# For SQLite (Development - Default):
# DATABASE_ENGINE=django.db.backends.sqlite3
# DATABASE_NAME=db.sqlite3

# For PostgreSQL (Production - Recommended):
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=psreports_prod
DATABASE_USER=psreports_user
DATABASE_PASSWORD=your-secure-database-password-here
DATABASE_HOST=localhost
DATABASE_PORT=5432

# ============================================================================
# SECURITY SETTINGS (Production Only)
# ============================================================================

# Enable HTTPS redirect (set to True only when SSL is properly configured)
SECURE_SSL_REDIRECT=False

# Secure cookies (set to True only when using HTTPS)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Browser security
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# HSTS (HTTP Strict Transport Security)
# Only enable after SSL is working correctly!
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================

# Email backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Gmail example (requires app-specific password if 2FA is enabled):
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# SendGrid example:
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your-sendgrid-api-key

# Default from email
DEFAULT_FROM_EMAIL=noreply@your-domain.com
SERVER_EMAIL=admin@your-domain.com

# ============================================================================
# STATIC AND MEDIA FILES
# ============================================================================

# Static files (CSS, JavaScript, images)
STATIC_ROOT=/opt/psreports/staticfiles
STATIC_URL=/static/

# Media files (user uploads)
MEDIA_ROOT=/opt/psreports/media
MEDIA_URL=/media/

# ============================================================================
# FILE UPLOAD SETTINGS
# ============================================================================

# Maximum upload size in bytes (default: 100MB)
MAX_UPLOAD_SIZE=104857600
FILE_UPLOAD_MAX_MEMORY_SIZE=104857600

# Allowed file extensions for uploads
ALLOWED_UPLOAD_EXTENSIONS=.xlsx,.xls,.csv,.dat,.html

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================

# Session expiry in seconds (default: 2 weeks)
SESSION_COOKIE_AGE=1209600

# Session engine (file-based, cache, or database)
SESSION_ENGINE=django.contrib.sessions.backends.db

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log directory
LOG_DIR=/opt/psreports/logs

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Backup directory
BACKUP_DIR=/opt/psreports/backups

# Backup retention in days
BACKUP_RETENTION_DAYS=30

# ============================================================================
# CACHE CONFIGURATION (Optional - for performance)
# ============================================================================

# Redis cache (if using Redis)
# CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
# CACHE_LOCATION=redis://127.0.0.1:6379/1

# File-based cache (simple alternative)
# CACHE_BACKEND=django.core.cache.backends.filebased.FileBasedCache
# CACHE_LOCATION=/opt/psreports/cache

# ============================================================================
# MONITORING & ERROR TRACKING (Optional)
# ============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# ============================================================================
# ASYNC PROCESSING (Optional)
# ============================================================================

# Celery broker (if using async processing)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Database connection pooling
# CONN_MAX_AGE=600

# ============================================================================
# TIMEZONE AND INTERNATIONALIZATION
# ============================================================================

# Timezone (default: UTC)
TIME_ZONE=UTC

# Language code
LANGUAGE_CODE=en-us

# Enable timezone support
USE_TZ=True

# ============================================================================
# APPLICATION-SPECIFIC SETTINGS
# ============================================================================

# Maximum number of WBS elements to display per page
WBS_PAGINATION_SIZE=50

# Maximum rows to process in reports
MAX_REPORT_ROWS=10000

# Enable report caching
ENABLE_REPORT_CACHE=False

# Report cache timeout in seconds (if enabled)
REPORT_CACHE_TIMEOUT=3600

# ============================================================================
# DEVELOPMENT SETTINGS (Development Only)
# ============================================================================

# Enable Django Debug Toolbar (development only)
# ENABLE_DEBUG_TOOLBAR=True

# Enable verbose SQL logging (development only)
# SQL_DEBUG=False

# ============================================================================
# NOTES
# ============================================================================

# 1. Always use strong, unique passwords for production
# 2. Never commit .env file to version control
# 3. Keep SECRET_KEY confidential and unique per environment
# 4. Use environment-specific .env files (.env.production, .env.staging)
# 5. Regularly rotate sensitive credentials
# 6. Enable HTTPS before setting SECURE_SSL_REDIRECT=True
# 7. Test email configuration before relying on it for critical notifications
# 8. Consider using a secrets management service for production (AWS Secrets Manager, HashiCorp Vault, etc.)
